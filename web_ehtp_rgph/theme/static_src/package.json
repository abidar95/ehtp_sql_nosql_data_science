{
	"name": "django_tailwind",
	"description": "",
	"scripts": {
		"build": "npm run build-postcss && npm run build-js && npm run build-cleancss",
		"build-postcss": "postcss --config . --map false --output ../static/css/styles.min.css ./src/styles.scss",
		"build-cleancss": "cleancss -o ../static/css/styles.min.css ../static/css/styles.min.css",
		"build-js": "uglifyjs ..\\static\\js\\main.js -o ..\\static\\js\\main.min.js -c",
		"start": "watch \"npm run build-postcss\" ./src"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "^2.0.6",
		"autoprefixer": "^9.7.4",
		"clean-css-cli": "^4.3.0",
		"node-sass": "^4.13.1",
		"postcss-cli": "^7.1.0",
		"postcss-scss": "^2.0.0",
		"rimraf": "^3.0.1",
		"tailwindcss": "^1.2.0",
		"watch": "^1.0.2"
	},
	"dependencies": {
		"uglify-js": "^3.8.0"
	}
}